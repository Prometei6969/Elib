@model List<ELib.Models.PublicationModel>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout2.cshtml";

}

<p class="text-success">@ViewBag.StatusMessage</p>



<table>
    <tr class="row">
        <th class="col-sm-2">Название</th>
        <th class="col-sm-2">Автор</th>
        <th class="col-sm-2">Год</th>
        <th class="col-sm-2">Тема</th>
    </tr>
    @foreach (var item in Model)
    {

        <tr class="row">
            <td class="col-sm-2">
                @Html.ActionLink(item.Name, "Show", new { id = item.Id })
            </td>
            <td class="col-sm-2">@item.Author</td>
            <td class="col-sm-2">@item.Year</td>
            <td class="col-sm-2">@item.Theme</td>
            <td class="col-sm-4">
                @Html.ActionLink("Удалить", "Delete", new { id=item.Id })
            </td>
        </tr>
    }
</table>

